@model App.ViewModels.UserAccount.Detail.UserAccount
@{
    Layout ="Layout";
    var userAccount = Model;
    var userAccountUserRoles = ViewData["userAccountUserRoles"] as IEnumerable<App.ViewModels.UserAccount.Detail.UserAccountUserRole>;
}

<div class="container">
    <div class="row">
        <div class="col">
            <form method="post">
                <div class="row">
                    <div class="mb-3 col-md-6 col-lg-4">
                        <label class="form-label" for="user_account_id">Id</label>
                        <input readonly id="user_account_id" name="Id" class="form-control form-control-sm" value="@userAccount.Id" type="number" required />
                    </div>
                    <div class="mb-3 col-md-6 col-lg-4">
                        <label class="form-label" for="user_account_name">Name</label>
                        <input readonly id="user_account_name" name="Name" class="form-control form-control-sm" value="@userAccount.Name" required maxlength="50" />
                    </div>
                    <div class="mb-3 col-md-6 col-lg-4">
                        <label class="form-label" for="user_account_email">Email</label>
                        <input readonly id="user_account_email" name="Email" class="form-control form-control-sm" value="@userAccount.Email" type="email" required maxlength="50" />
                    </div>
                    <div class="form-check col-md-6 col-lg-4">
                        <input readonly id="user_account_active" name="Active" class="form-check-input" type="checkbox" value="true" checked=@(@userAccount.Active) />
                        <label class="form-check-label" for="user_account_active">Active</label>
                    </div>
                    <div class="col-12">
                        <h6>Roles</h6>
                        <table class="table table-sm table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Role Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var userAccountUserRole in userAccountUserRoles) {
                                <tr>
                                    <td>@userAccountUserRole.RoleName</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="col-12">
                        <a class="btn btn-sm btn-secondary" href="@ViewData["ref"]">Back</a>
                        <a class="btn btn-sm btn-primary" href="/UserAccount/Edit/@userAccount.Id?ref=@(System.Net.WebUtility.UrlEncode(ViewData["ref"].ToString()))">Edit</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    initPage(true)
</script>